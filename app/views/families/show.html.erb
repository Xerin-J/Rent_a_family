<div class="container mt-4 p-4 border rounded" style="border-color: #FF5A5F;">
  <h1 class="fw-bold mb-4" style="color: #FF5A5F;"><%= @family.members %></h1>

  <div class="mb-3">
    <h5 class="text-muted">Location:</h5>
    <p class="fs-5"><%= @family.location %></p>
  </div>

  <div class="mb-3">
    <h5 class="text-muted">Available for:</h5>
    <p class="fs-5"><%= @family.event_type %></p>
  </div>

  <div class="mb-3">
    <h5 class="text-muted">Hourly rate:</h5>
    <p class="fs-5">¥<%= @family.hourly_rate %></p>
  </div>
</div>

<div class="mt-4">
  <%= link_to "← Back to the list", families_path, class: "btn btn-outline-primary" %>
</div>

<div class="col-6">
<%= simple_form_for [@family, @booking] do |b| %>
  <div class="card">
    <div class="mb-3">
      <%= b.input :start_time, label:"MM/DD", input_html: { class: "form-control" } %>
      <%= b.input :end_time, label:"MM/DD", input_html: { class: "form-control" } %>
      <%= b.input :location, label:"Place", input_html: { class: "form-control" } %>
      <%= b.input :event_type, label:"Party type", input_html: { class: "form-control" } %>
      <%= b.input :total_cost, label:"$$$", input_html: { class: "form-control" } %>
    </div>
    <%= b.button :submit, "Book this family", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
