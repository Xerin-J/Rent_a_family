<%= simple_form_for(@family, html: { class: "container mt-5", style: "font-family: 'Circular Airbnb Cereal', Arial, sans-serif; max-width: 600px;" }) do |f| %>
  <h2 class="mb-4" style="color: #484848;">Register Your Family</h2>

  <div class="mb-4">
    <%= f.input :members, label: "Family Name", input_html: { class: "form-control rounded-pill shadow-sm", style: "padding: 0.75rem 1.25rem;" }, label_html: { class: "form-label fw-semibold", style: "color: #484848;" } %>
  </div>

  <div class="mb-4">
    <%= f.input :location, input_html: { class: "form-control rounded-pill shadow-sm", style: "padding: 0.75rem 1.25rem;" }, label_html: { class: "form-label fw-semibold", style: "color: #484848;" } %>
  </div>

  <div class="mb-4">
    <%= f.input :event_type, label: "Type of Events", input_html: { class: "form-control rounded-pill shadow-sm", style: "padding: 0.75rem 1.25rem;" }, label_html: { class: "form-label fw-semibold", style: "color: #484848;" } %>
  </div>

  <div class="mb-4">
    <%= f.input :hourly_rate, label: "Hourly Rate", as: :decimal, input_html: { step: 0.01, min: 0, class: "form-control rounded-pill shadow-sm", style: "padding: 0.75rem 1.25rem;" }, label_html: { class: "form-label fw-semibold", style: "color: #484848;" } %>
  </div>

  <div class="d-flex justify-content-center">
    <%= f.button :submit, "Create Family", class: "btn btn-danger rounded-pill px-5 shadow-sm" %>
  </div>
<% end %>