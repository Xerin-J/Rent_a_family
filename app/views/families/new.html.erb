<%= simple_form_for @family, html: { class: "container mt-4 p-4 border rounded", style: "border-color: #FF5A5F;" } do |f| %>
  <h2 class="fw-bold mb-4" style="color: #FF5A5F;">Register Your Family</h2>

  <div class="mb-3">
    <%= f.input :members, label: "Family Name", input_html: { class: "form-control" } %>
    <%= f.input :location, label: "Your Location", input_html: { class: "form-control" } %>
    <%= f.input :event_type, label: "What events are you available for?", input_html: { class: "form-control" } %>
    <%= f.input :hourly_rate, label: "What is your hourly rate?", input_html: { class: "form-control" } %>
  </div>

  <%= f.button :submit, "Add Family", class: "btn btn-primary" %>
<% end %>